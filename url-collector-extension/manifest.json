{
    "manifest_version": 2,
    "name": "URL Collector",
    "version": "1.0",
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "iconbit.png",
            "48": "iconbit.png",
            "128": "iconbit.png"
        }
    },
    "icons": {
        "16": "iconbit.png",
        "48": "iconbit.png",
        "128": "iconbit.png"
    }
}
